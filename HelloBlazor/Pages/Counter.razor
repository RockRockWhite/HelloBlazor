@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int increaseAmonunt { get; set; } = 100;

    private
        void IncrementCount()
    {
        currentCount += increaseAmonunt;
    }

}